<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ảnh sân -->
        <!-- Phần đầu trang -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Ảnh sân -->
            <ImageView
                android:id="@+id/ivStadiumImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/d3"
                android:contentDescription="Ảnh sân"/>

            <!-- Nút quay lại -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="12dp"
                android:src="@drawable/d6"
                android:background="@drawable/bg_circle_white"
                android:padding="8dp"
                android:layout_gravity="top|start"
                android:contentDescription="Quay lại"/>
        </FrameLayout>


        <!-- Thông tin cơ bản -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card_white"
            android:layout_marginTop="-16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvStadiumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sân bóng đá KTX Đại học FPT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ Mở cửa: 05:00 - 22:00"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ từ 100.000đ - 300.000đ/giờ"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvStadiumAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Khu CNC Hoà Lạc"
                android:textColor="#555"
                android:layout_marginTop="4dp"/>

            <!-- Tags tiện ích -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:text="Trọng tài"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_lightgreen"
                    android:textColor="#333"
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:text="Quầy nước"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_lightgreen"
                    android:textColor="#333"
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:text="Gửi xe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_lightgreen"
                    android:textColor="#333"
                    android:textSize="12sp"
                    android:padding="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Giới thiệu -->
        <TextView
            android:text="Giới thiệu sân"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sân nằm trong khu KTX Đại học FPT, thuận tiện cho sinh viên và cư dân xung quanh đặt lịch theo giờ."
            android:textColor="#444"
            android:layout_marginTop="8dp"/>

        <!-- Cơ sở vật chất -->
        <TextView
            android:text="Cơ sở vật chất tại sân"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✔ Sân tiêu chuẩn 5 người, cỏ nhân tạo\n✔ Có đèn chiếu sáng, WC sạch sẽ\n✔ Khu để xe ngay gần sân"
            android:textColor="#444"
            android:layout_marginTop="8dp"/>

        <!-- Vị trí -->
        <TextView
            android:text="Vị trí chính xác"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnViewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Xem bản đồ"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            android:layout_marginTop="8dp"/>

        <!-- Đánh giá -->
        <TextView
            android:text="Đánh giá khách hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="5.0 ★★★★★"
                android:textColor="#FFA000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="(100%)"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnSeeReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả đánh giá"
            android:layout_marginTop="8dp"/>

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhắn tin"
                android:textColor="#388E3C"
                android:backgroundTint="#FFFFFF"
                android:background="@drawable/btn_filter_border"/>

            <Button
                android:id="@+id/btnBookNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặt sân ngay"
                android:textColor="#FFFFFF"
                android:backgroundTint="#388E3C"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
